# keybard

set $keyboard_layout Keyboard Layout: (f) Français, (e) US English
mode "$keyboard_layout" {
  bindsym f exec --no-startup-id setxkbmap fr, mode "default"
  bindsym e exec --no-startup-id setxkbmap us, mode "default"

  # back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
}
bindsym $mod+shift+K mode "$keyboard_layout"

